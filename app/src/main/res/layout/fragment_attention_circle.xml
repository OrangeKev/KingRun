<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipRefresh_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ly_no_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/common_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="82dp"
            android:layout_height="44dp"
            android:src="@mipmap/common_pic_null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/no_circle"
            android:textColor="@color/text_color_gray_common"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/common_btn_click"
            android:text="查看热门圈子"
            android:textColor="@color/text_color_black_common"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</RelativeLayout>