<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_color">

    <include
        android:id="@+id/toolbar"
        layout="@layout/title_bar" />

    <EditText
        android:id="@+id/et_old_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@color/white_color"
        android:hint="@string/input_old_pwd"
        android:maxLength="16"
        android:paddingEnd="20dp"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:text=""
        android:textColor="@color/text_color_gray"
        android:textColorHint="@color/sub_class_content_text_color"
        android:textSize="@dimen/text_size_15"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_old_pwd"
        android:layout_marginTop="1dp"
        android:background="@color/white_color"
        android:hint="@string/input_new_pwd"
        android:maxLength="16"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/text_color_gray"
        android:textColorHint="@color/sub_class_content_text_color"
        android:textSize="@dimen/text_size_15" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/et_new_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/yellow_shallow"
        android:text="@string/sure" />
</RelativeLayout>
