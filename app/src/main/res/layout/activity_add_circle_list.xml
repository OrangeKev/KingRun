<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.king.run.activity.circle.AddCircleListActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/title_bar" />

    <ImageView style="@style/activity_text_splite_full_deep" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="1dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/lv_no_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="82dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/common_pic_null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="@string/no_circle"
            android:textColor="@color/text_color_gray_common"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

</RelativeLayout>
