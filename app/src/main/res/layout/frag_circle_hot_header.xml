<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/iv_top"
        android:background="@color/common_bg" />

    <RelativeLayout
        android:id="@+id/ly_circle_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_view"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="热门圈子"
            android:textColor="@color/text_color_32"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="查看热门圈子"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <View
        android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ly_circle_name"
        android:background="@color/split_line_color_common" />

    <com.king.run.view.HorizontalListView
        android:id="@+id/hor_lv"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/view_two"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/hor_lv"
        android:background="@color/white_color" />
</RelativeLayout>