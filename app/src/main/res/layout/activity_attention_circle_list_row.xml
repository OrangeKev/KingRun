<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher_app" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/iv_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="圈子名称"
            android:textColor="@color/text_color_black_common"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_join_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="xx人参与"
            android:textColor="@color/text_color_8"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_attention"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/btn_attention_false"
        android:text="@string/attention"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        android:id="@+id/iv_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/icon_next" />

    <ImageView
        style="@style/activity_text_splite_full_shallow"
        android:layout_below="@+id/iv_avatar"
        android:contentDescription="@null" />
</RelativeLayout>