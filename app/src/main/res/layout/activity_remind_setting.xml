<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/ly_remind_time"
                android:layout_width="match_parent"
                android:layout_height="62.5dp"
                android:background="@color/white_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="提醒时间"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/common_icon_arrow_grey" />

                <TextView
                    android:id="@+id/tv_remind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/iv_next"
                    android:text="20:00"
                    android:textColor="@color/text_color_32"
                    android:textSize="@dimen/text_size_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/split_line_color_common" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_remind_time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_remind_time"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/remind_time"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:id="@+id/lin_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_remind_time_name"
                android:orientation="vertical"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/week_day_1"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@drawable/item_bg_selector"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="14dp"
                    android:text="@string/sunday"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    style="@style/activity_text_splite_full"
                    android:contentDescription="@null" />

                <CheckBox
                    android:id="@+id/week_day_2"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@drawable/item_bg_selector"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/monday"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    style="@style/activity_text_splite_full"
                    android:contentDescription="@null" />

                <CheckBox
                    android:id="@+id/week_day_3"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@drawable/item_bg_selector"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/tuesday"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    style="@style/activity_text_splite_full"
                    android:contentDescription="@null" />

                <CheckBox
                    android:id="@+id/week_day_4"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@drawable/item_bg_selector"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/wednesday"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    style="@style/activity_text_splite_full"
                    android:contentDescription="@null" />

                <CheckBox
                    android:id="@+id/week_day_5"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@drawable/item_bg_selector"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/thursday"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    style="@style/activity_text_splite_full"
                    android:contentDescription="@null" />

                <CheckBox
                    android:id="@+id/week_day_6"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@drawable/item_bg_selector"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/friday"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    style="@style/activity_text_splite_full"
                    android:contentDescription="@null" />

                <CheckBox
                    android:id="@+id/week_day_7"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:background="@drawable/item_bg_selector"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/saturday"
                    android:textColor="@color/text_color_black_common"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_below="@+id/lin_week"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_btn_click"
                android:text="@string/delete_remind"
                android:textColor="@color/text_color_black_common"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
