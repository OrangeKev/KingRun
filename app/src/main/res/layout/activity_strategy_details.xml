<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_top_bg"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:background="@mipmap/app"
                android:scaleType="fitXY" />

            <include
                android:id="@+id/toolbar"
                layout="@layout/title_bar" />

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_launcher_app" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="消灭小肚子"
                android:textColor="@color/text_color_black_common"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/tv_name_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="适合人群"
                android:textColor="@color/text_color_black_common"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_content_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_one"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="适合于腹部有明显赘肉或小腹突出的人群。孕妇、糖尿病人群及关节损伤患者应慎重选择。"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content_one"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:text="训练方式"
                android:textColor="@color/text_color_black_common"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_content_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_two"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="以有氧及间歇训练为主，在减少腰腹赘肉的同时配合核心强化训练来增强腰腹核心力量，改善小腹突出。"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_name_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content_two"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:text="注意事项"
                android:textColor="@color/text_color_black_common"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_content_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_three"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="建议每周测量一次腰围，并用拍照记录腹部曲线的变化，直到达到满意效果或升级训练计划。"
                android:textColor="@color/text_color_8"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/iv_splite"
                style="@style/activity_text_splite_full_shallow"
                android:layout_height="10dp"
                android:layout_below="@+id/tv_content_three"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_splite"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="必读锦囊"
                android:textColor="@color/text_color_black_common"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/iv_problem"
                android:layout_width="101dp"
                android:layout_height="135dp"
                android:layout_below="@+id/tv_title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/video_list_bg" />

            <TextView
                android:id="@+id/tv_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:layout_toEndOf="@+id/iv_problem"
                android:text="常见问题"
                android:textColor="@color/text_color_black_common"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_title"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/common_icon_arrow_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_problem"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/iv_problem"
                android:textColor="@color/text_color_8"
                android:text="为什么卷腹时都是脖子用力？减肥药为什么不靠谱？晚上饿了吃什么不长胖？"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
