<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/splash_logo" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/iv_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ly_right"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/bg_bf000000"
            android:orientation="vertical">

            <TextView
                android:layout_width="78dp"
                android:layout_height="22dp"
                android:background="@drawable/tv_share_record_bg"
                android:gravity="center"
                android:text="@string/sports_a_novice"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.5dp"
                android:layout_marginTop="58dp"
                android:text="@string/today_steps"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9902"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/step"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.5dp"
                android:layout_marginTop="64dp"
                android:text="@string/have_walk"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.5dp"
                android:layout_marginTop="19dp"
                android:text="@string/have_consume"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.5dp"
                android:layout_marginTop="4dp"
                android:visibility="invisible"
                android:text="@string/have_climb"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="20dp">

        <com.king.run.view.CircleImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher_app" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/iv_user_avatar"
            android:text="长按二维码"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/iv_user_avatar"
            android:text="来跟我们一起运动吧！"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/tv_qr_code"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_launcher_app" />
    </RelativeLayout>
</LinearLayout>