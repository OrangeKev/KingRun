<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="2017年5月1日"
        android:textColor="@color/text_color_8"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_unit_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="1500"
        android:textColor="@color/text_color_black_common"
        android:textSize="@dimen/text_size_24" />


    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_unit_value"
        android:layout_below="@+id/tv_date"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@+id/tv_unit_value"
        android:gravity="bottom"
        android:text="@string/step"
        android:textColor="@color/text_color_8"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/tv_unit"
        android:text="00:30:00"
        android:textColor="@color/text_color_black_common"
        android:textSize="@dimen/text_size_24" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="12dp"
        android:src="@mipmap/train_result_icon_arrow_grey" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_unit_value"
        android:layout_marginTop="15dp"
        android:background="#bcb5b9" />

</RelativeLayout>